<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/rojo"
    android:orientation="vertical"
    tools:context="com.teghpp.MenuActivity">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="bottom"
            android:text="@string/paciente_choque"
            android:textAlignment="center"
            android:textColor="@color/blanco"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="395dp"
        android:layout_height="536dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

                <!-- 1 -->
                <android.support.v7.widget.CardView
                    android:id="@+id/sensorio"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#1D1D1D"
                    android:onClick="launchPerdidaActivity"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="116dp"
                            android:gravity="center"
                            android:text="@string/sensorio"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/brain"
                            android:tint="@color/blanco" />
                </android.support.v7.widget.CardView>

                <!-- 4 -->
                <android.support.v7.widget.CardView
                    android:id="@+id/perfusion"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#8A8888"
                    android:onClick="launchPerdidaActivity"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="116dp"
                            android:gravity="center"
                            android:text="@string/perfusion"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/nail"
                            android:tint="@color/blanco" />
                </android.support.v7.widget.CardView>

                <!-- 5 -->
                <android.support.v7.widget.CardView
                    android:id="@+id/pulso"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:onClick="launchPerdidaActivity"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="@color/blanco"
                            android:gravity="center"
                            android:text="@string/pulso"
                            android:textColor="@color/colorPrimary"
                            android:textSize="30sp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/pulse" />
                </android.support.v7.widget.CardView>

                <!-- 6 -->
                <android.support.v7.widget.CardView
                    android:id="@+id/presion"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#343834"
                    android:onClick="launchPerdidaActivity"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="116dp"
                            android:gravity="center"
                            android:text="@string/presion_arterial"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/pressure"
                            android:tint="@color/blanco" />

                </android.support.v7.widget.CardView>


        </GridLayout>


</android.support.constraint.ConstraintLayout>